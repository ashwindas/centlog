	<%= f.label :title %>
	<br />
	<%= f.text_field :title %>
</div>
<div class="field">
	<%= f.label :amount %>
	<br />
	<%= f.text_field :amount %>
</div>
<div class="field">
	<%= f.label :date %>
	<br />
	<%= f.date_select :date %>
</div>
<div class="actions">
	<%= f.submit "Done", :class => "btn primary medium" %>
</div>
<% end %> 