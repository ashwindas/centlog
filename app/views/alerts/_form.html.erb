<%= form_for(@alert) do |f| %>
<% if @alert.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@alert.errors.count, "error") %> prohibited this alert from being saved:</h2>
	<ul>
		<% @alert.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="field">
	<br />
	<%= f.hidden_field :user_id,  :value => current_user.id %>
</div>
